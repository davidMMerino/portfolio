{
  "name": "portfolio",
  "version": "2.0.0",
  "private": true,
  "homepage": "https://davidMMerino.github.io/portfolio",
  "scripts": {
    "build": "yarn compile && yarn next build",
    "build:css": "postcss globalStyles.scss -o output.css",
    "clean": "rm -rf build-tsc .next",
    "compile": "yarn run -T tsc --build --verbose",
    "dev": "yarn compile && yarn next dev",
    "deploy": "gh-pages -d build",
    "lint": "yarn run -T prettier --write './src/**/*.{js,jsx,json,ts,tsx}' && eslint './src/**/*.{js,jsx,ts,tsx}' --fix --max-warnings=0",
    "predeploy": "yarn build",
    "start": "yarn next start",
    "sitemap": "yarn next-sitemap"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.16",
    "@heroicons/react": "^2.0.18",
    "autoprefixer": "10.4.16",
    "classnames": "^2.3.2",
    "next": "^15.0.3",
    "nodemailer": "^6.9.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.5",
    "ts-pattern": "^5.0.4"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.9",
    "@next/eslint-plugin-next": "^14.0.3",
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "^20.4.5",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.2.18",
    "@types/tailwindcss": "^3.1.0",
    "@types/webpack-env": "^1.18.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "cssnano": "^6.0.1",
    "eslint-config-next": "^15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-module-resolver": "^1.5.0",
    "eslint-plugin-monorepo": "^0.3.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-memo": "^0.0.3",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "gh-pages": "^6.2.0",
    "postcss": "^8.4.27",
    "postcss-preset-env": "^9.1.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "sass": "^1.81.0",
    "serve": "^14.2.4",
    "sort-package-json": "^2.5.1",
    "stylelint": "^15.10.2",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2",
    "tailwindcss": "^3.3.3",
    "typescript": "5.3.2"
  },
  "resolutions": {
    "autoprefixer": "10.4.5"
  }
}
